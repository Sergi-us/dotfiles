#!/bin/sh
# Brave Wrapper mit allen Tweaks

# SCALE_FACTOR=1.5  # Variable f√ºr einfache Anpassung
SCALE_FACTOR=$(grep "^SCALE_FACTOR=" ~/.config/x11/xprofile | cut -d= -f2)

exec /usr/bin/brave \
    --force-device-scale-factor=$SCALE_FACTOR \
    --high-dpi-support=1 \
    --enable-features=UseOzonePlatform \
    --ozone-platform=x11 \
    "$@"

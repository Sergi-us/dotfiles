# FÃ¼ge alle Ã„nderungen zur Staging-Area hinzu
git add .

# PrÃ¼fe, ob es Ã„nderungen gibt, die committet werden mÃ¼ssen
if git diff-index --quiet HEAD --; then
  echo "Keine Ã„nderungen zum Committen."
else
  # Committe die Ã„nderungen mit der angegebenen Nachricht
  read -p "Gib eine Commit-Nachricht ein: " commit_message

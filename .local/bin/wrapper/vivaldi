#!/bin/sh
# Vivaldi Wrapper (mit Tweaks)

# Variable f√ºr einfache Anpassung
SCALE_FACTOR=1.5

# SCALE_FACTOR=$(grep "^SCALE_FACTOR=" ~/.config/x11/xprofile | cut -d= -f2)

exec /usr/bin/vivaldi \
    --high-dpi-support=1 \
    --force-device-scale-factor=$SCALE_FACTOR \
    --enable-features=UseOzonePlatform \
    --ozone-platform=x11 \
    "$@"

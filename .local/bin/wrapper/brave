#!/bin/sh
# Brave Wrapper mit allen Tweaks

# Manuelle Skalierung (auskommentieren f√ºr xprofile)
# SCALE_FACTOR=1

SCALE_FACTOR=${SCALE_FACTOR:-$(grep "^SCALE_FACTOR=" ~/.config/x11/xprofile | cut -d= -f2)}

exec /usr/bin/brave \
    --force-device-scale-factor=$SCALE_FACTOR \
    --high-dpi-support=1 \
    --enable-features=UseOzonePlatform \
    --ozone-platform=x11 \
    "$@"

#!/bin/sh
## 2025-01-09 SARBS

# This script does the following:
#	Run by itself, set the wallpaper (at X start).
#	If given a file, set that as the new wallpaper.
#	If given a directory, choose random file in it.
#	If wal is installed, also generates a colorscheme.

# Location of link to wallpaper link.
bgloc="${XDG_DATA_HOME:-$HOME/.local/share}/bg"

# Configuration files of applications that have their themes changed by pywal.
dunstconf="${XDG_CONFIG_HOME:-$HOME/.config}/dunst/dunstrc"
zathuraconf="${XDG_CONFIG_HOME:-$HOME/.config}/zathura/zathurarc"

# Give -s as parameter to make notifications silent.
while getopts "s" o; do case "${o}" in
	s) silent='1' ;;
esac done

shift $((OPTIND - 1))

trueloc="$(readlink -f "$1")" &&
case "$(file --mime-type -b "$trueloc")" in
	image/* ) ln -sf "$trueloc" "$bgloc" && [ -z "$silent" ] && notify-send -i "$bgloc" "ändere Hintergrund..." ;;
	inode/directory ) ln -sf "$(find "$trueloc" -iregex '.*.\(jpg\|jpeg\|png\|gif\)' -type f | shuf -n 1)" "$bgloc" && [ -z "$silent" ] && notify-send -i "$bgloc" "zufälligen Hintergrund gewählt." ;;
	*) [ -z "$silent" ] && notify-send " Fehler" "kein gültiges Bild oder Verzeichniss." ; exit 1;;
esac

# If hellwal is installed, use it.
if command -v hellwal >/dev/null 2>&1 ; then
	hellwal -i "$(readlink -f $bgloc)" --dark --check-contrast -o ~/.cache/wal/ -s "${XDG_CONFIG_HOME:-$HOME/.config}/hellwal/postrun" -q
# Fallback to pywal if hellwal is not available
elif command -v wal >/dev/null 2>&1 ; then
	wal -n -i "$(readlink -f $bgloc)" -o "${XDG_CONFIG_HOME:-$HOME/.config}/wal/postrun" >/dev/null 2>&1
# If neither is installed, return config files to normal.
else
	[ -f "$dunstconf.bak" ] && unlink "$dunstconf" && mv "$dunstconf.bak" "$dunstconf"
	[ -f "$zathuraconf.bak" ] && unlink "$zathuraconf" && mv "$zathuraconf.bak" "$zathuraconf"
fi

# ändert das Theme für Telegram und legt es in ~/.cache/walogram/wal.tdesktop-theme ab
# walogram -B -i ~/.local/share/bg >/dev/null 2>&1
# walogram -i ~/.local/share/bg >/dev/null 2>&1

xwallpaper --zoom "$bgloc"
# If running, dwm hit the key to refresh the color scheme.
# pidof dwm >/dev/null && xdotool key super+F5
pidof dwm >/dev/null && kill -USR1 $(pidof dwm)

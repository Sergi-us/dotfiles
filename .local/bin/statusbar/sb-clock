#!/bin/sh
## 2025-03-06 SARBS

clock=$(date '+%I')

case "$clock" in
	"00") icon="󱑖 " ;;
	"01") icon="󱑋 " ;;
	"02") icon="󱑌 " ;;
	"03") icon="󱑍 " ;;
	"04") icon="󱑎 " ;;
	"05") icon="󱑏 " ;;
	"06") icon="󱑐 " ;;
	"07") icon="󱑑 " ;;
	"08") icon="󱑒 " ;;
	"09") icon="󱑓 " ;;
	"10") icon="󱑔 " ;;
	"11") icon="󱑕 " ;;
	"12") icon="󱑖 " ;;
esac

case $BLOCK_BUTTON in
	1) notify-send "Dieser Monat" "$(cal | sed "s/\<$(date +'%e'|tr -d ' ')\>/<b><span color='red'>&<\/span><\/b>/")" && notify-send "Termine" "$(calcurse -d30)" ;;
	2) setsid -f "$TERMINAL" -e calcurse ;;
	3) notify-send " Zeit-/Datumsmodul" "\- L-󰍽 um bevorstehende Termine und Monat
- M-󰍽 öffnet calcurse" ;;
    4) ;;
    5) ;;
	6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

date "+%H:%M"
# date "+$icon%H:%M "
# $icon Zeigt die Miniuhr an
# %a    Wochentag kurz
# %A    Wochentag lang
# %b    Monat kurz
# %h    Monat kurz
# %B    Monat lang
# %d    Datum Tag (day)
# %D    Monat/Tag/Jahr (Amerikanisches Kurzformat)
# %H    Stunde
# %M    Minute
# %y    Jahr kurz
# %Y    Jahr lang
# %V    Kalenderwoche

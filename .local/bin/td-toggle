#!/bin/sh
## 2025-01-09 SARBS

# If transmission-daemon is running, will ask to kill, else will ask to start.

if pidof transmission-daemon >/dev/null ;
then
	[ "$(printf "Nein\\nJa" | dmenu -i -p "transmission-daemon ausschalten?")" = "Ja" ] && killall transmission-daemon && notify-send "transmission-daemon disabled."
else
	ifinstalled transmission-cli || exit
	[ "$(printf "Nein\\nJa" | dmenu -i -p "transmission daemon einschalten?")" = "Ja" ] && transmission-daemon && notify-send "transmission-daemon enabled."
fi
sleep 3 && pkill -RTMIN+7 "${STATUSBAR:-dwmblocks}"
